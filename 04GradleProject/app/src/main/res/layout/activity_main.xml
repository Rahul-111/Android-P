<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#EAF0F1"
    >

    <Button
        android:id="@+id/Errorbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error Botton "
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:background="#BA2F16"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="showToast"
        />
    <Button
        android:id="@+id/successButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success Button "
        android:background="#26ae60"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="showToast"
        />
    <Button
        android:id="@+id/infoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info Botton "
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:background="#0A79DF"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="showToast"
        />
    <Button
        android:id="@+id/warningButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warning Button"
        android:textColor="#FFFFFF"
        android:background="#E74292"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="18dp"
        android:layout_marginHorizontal="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="showToast"
        />
    <Button
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Button "
        android:textSize="18dp"
        android:background="#00CCCD"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="showToast"
        />

</LinearLayout>